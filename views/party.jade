extends layout

block content
  script(src="/js/player.js")
  script(type="text/javascript").
    $(function(){
        player = new Player();
        player.addSongsToQueue(!{JSON.stringify(songs)});
        
    });
  .site-wrapper
      .site-wrapper-inner
          .cover-container
            .masthead.clearfix
              .inner
                .masthead-brand
                  img.img-rounded(src="/img/dodge.jpg", width="50px", style="float:left;")
                  h3.pull-left Such <br> Jukebox
            .inner.cover
                ul.list-group.queue
                    ul.list-group
                        li.list-group-item
                            .song-info-list
                                .song-icon.song-icon-list
                                .song-details.song-details-list
                                    p Girlfriend
                                    p J Beibs
                                a(href="#", class="btn btn btn-default btn-info btn-lg disabled song-votes-count")
                                    span(class="glyphicon glyphicon-hand-up") 14
                        li.list-group-item
                            .song-info-list
                                .song-icon.song-icon-list
                                .song-details.song-details-list
                                    p Girlfriend
                                    p J Beibs
                                a(href="#", class="btn btn btn-default btn-danger btn-lg disabled song-votes-count")
                                    span(class="glyphicon glyphicon-hand-down") -1
                                     
                .player-controls
                    p.now-playing Now Playing
                    a(id="play-btn" class="btn btn-info btn-lg player-btn")
                        span(class="glyphicon glyphicon-play")
                    a(id="pause-btn", class="btn btn-info btn-lg player-btn", style="display:none;")
                        span(class="glyphicon glyphicon-pause")
                    a(id="next-song-btn", class="btn btn-info btn-lg player-btn")
                        span(class="glyphicon glyphicon-forward")
                    .song-info
                        .song-icon(id="current-song-icon")
                        .song-details
                            p(id="current-song-title") Girlfriend
                            p(id="current-song-artist") J Beibs
                    .progress.progress-striped.active(id="current-song-progress")
                        .progress-bar.progress-bar-info(role="progressbar", aria-valuenow="60", aria-valuemin="0", aria-valuemax="100", style="width: 0;")
                    audio(preload="auto", id="player", autobuffer, ontimeupdate="player.updateTimeOfCurrentSong(this.currentTime, this.duration)")
                        source(src="http://localhost:3000/songs/3005.mp3", type="audio/mp3")